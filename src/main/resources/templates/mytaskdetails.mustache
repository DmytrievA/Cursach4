<html>
<head>
    <meta charset="utf-8">
</head>
<div class="nav">
    <a href = "/">Main Page</a>
    <a href = "/groups">My Groups</a>
    <a href = "/newtask">New Tasks</a>
</div>
<form action="/logout" method="post">
    <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
    <input type="submit" value="Sign Out"/>
</form>
<body>
{{#task}}
    {{title}}<br/>
    {{date}}<br/>
    {{time}}<br/>
    {{duration}}<br/>
    {{taskStatus}}<br/>
    <form method="post">
        <input type="text" multiple="multiple" name="description" value="{{description}}"/>
        <select name = "newStatus">
            {{#statuses}}
                <option value="{{id}}">{{name}}</option>
            {{/statuses}}
        </select>
        <input type="hidden" name="task" value="{{id}}"/>
        <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
        <input type="submit" name = "submitAction" value="Accept"/>
    </form>
{{/task}}
</body>
</html>
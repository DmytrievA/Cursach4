<html>
<body>
<div>
    <form method="post">
        <input type="date" name="date"/><br>
        <input type="time" name="timeStart"/><br>
        <input type="time" name="timeFinish"/><br>
        <input type="text" name="name" placeholder="Введите название"/><br>
        <input type="text" name="description" placeholder="Введите описание"/><br>
        <select name="taskState">
            <option value="1">Ожидает</option>
            <option value="2">В процессе</option>
            <option value="3">Завершён</option>
            <option value="4">Провален</option>
            <option value="5">Отклонен</option>
        </select>
        <button type="submit">Добавить</button>
    </form>
</div>
<div>
    <h3>{{#taskState}}
            {{taskState}}<br/>
            {{time}}<br/>
        {{/taskState}}
    </h3>
</div>
<div>
    <div>Список заданий</div>
    {{#tasks}}
    <br>
        <br>{{id}}
        <br>{{title}}
        <br>{{description}}
        <br>{{date}}
        <br>{{time}}
        <br>{{duration}}
        <br>{{#taskStatus}}
                {{name}}
            {{/taskStatus}}
    </div>
    {{/tasks}}
</body>
</html>
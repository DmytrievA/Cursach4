<html>
<body>
<div>
    <form method="post">
        <input type="date" name="date"/>
        <input type="time" name="timeStart"/>
        <input type="time" name="timeFinish"/>
        <input type="text" name="name" placeholder="Введите имя"/>
        <input type="text" name="description" placeholder="Введите описание"/>
        <button type="submit">Добавить</button>
    </form>
</div>
<div>
    <h3>{{#message}}
            {{message}}<br/>
            {{time}}<br/>
        {{/message}}
    </h3>
</div>
<div>
    <div>Список заданий</div>
    {{#tasks}}
    <br>
        <br>{{id}}
        <br>{{title}}
        <br>{{description}}
        <br>{{date}}
        <br>{{time}}
        <br>{{duration}}
    </div>
    {{/tasks}}
</body>
</html>